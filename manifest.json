{

  "manifest_version": 2,
  "name": "Sibling",
  "version": "0.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/siblings-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["sibling.js"]
    }
  ]

}
